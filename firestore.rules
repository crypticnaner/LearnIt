rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Match any document in the 'users' collection
    match /users/{userId} {
      // Allow authenticated users to read and write their own user document
      allow read, write: if request.auth.uid == userId;
    }

    // Match any document in the 'tickets' collection
    match /tickets/{ticketId} {
      // Allow a user to create a new ticket if they are authenticated
      allow create: if request.auth != null;

      // Allow reading tickets for:
      // 1. The ticket's creator
      // 2. The assigned worker
      // 3. Any user with the 'worker' role
      allow read: if request.auth.uid == resource.data.createdByUser || 
                  request.auth.uid == resource.data.assignedToWorker ||
                  get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'worker';

      // Allow updating tickets for:
      // 1. The ticket's creator
      // 2. The assigned worker
      // 3. Any user with the 'worker' role
      allow update: if request.auth.uid == resource.data.createdByUser || 
                    request.auth.uid == resource.data.assignedToWorker ||
                    get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'worker';
    }
  }
}